<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー情報変更</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :nickname, "お名前" %> <em>(10文字以下)</em><br />
          <%= f.text_field :nickname, class: :field, autofocus: true, autocomplete: "nickname" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, class: :field, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "変更", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>