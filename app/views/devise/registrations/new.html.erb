<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :nickname, "お名前" %> <em>(6 characters maximum)</em><br />
          <%= f.text_field :nickname, autofocus: true, maxlength: "6", autocomplete: "nickname" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード" %> <em>(confirmation)</em><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>