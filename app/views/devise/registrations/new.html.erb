<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :nickname, "お名前" %> <em>(10文字以下)</em><br />
          <%= f.text_field :nickname, class: :field, autofocus: true, autocomplete: "nickname" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, class: :field, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(半角英数字<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, class: :field, id:"user_password", autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード" %> <em>(確認用)</em><br />
          <%= f.password_field :password_confirmation, class: :field, id:"user_password_confirmation", autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>