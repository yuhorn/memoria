<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">パスワード再設定</h2>

      <%= form_with model: @user, url: user_password_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, class: :field, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <h3>入力されたメールアドレスにパスワード再設定メールを<br>送信します</h3>
        </div>

        <div class="actions">
          <%= f.submit "メール送信", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>