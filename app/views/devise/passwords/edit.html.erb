<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">パスワード変更</h2>

        <%= form_with model: @user, url: user_password_path, local: true do |f| %>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(半角英数字<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, class: :field, id:"user_password", autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード" %> <em>(確認用)</em><br />
          <%= f.password_field :password_confirmation, class: :field, id:"user_password_confirmation", autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "変更", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>