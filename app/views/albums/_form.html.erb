<%= form_with model: モデル名, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"title" %>
  </div>

  <div class="field">
    <%= f.label :category, "カテゴリー" %><br />
    <%= f.text_area :category, class: :form__text, id:"category" %>
  </div>

  <div class="field">
    <%= f.label :album_image, "表紙の画像" %><br />
    <div id="previews"></div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= image_tag album.album_image, class: "album_image", id:"album_image" if album.album_image.attached? %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>